<form action="/admin/product2/edit" method="post" enctype="multipart/form-data">
<div class="mb-3">
            <label for="exampleInputImage" class="form-label">Image</label>
            <input type="hidden" value="{{product2.image}}" name="oldImg">
            <input value="{{product2.image}}" name="image" type="file" class="form-control" id="exampleInputImage" aria-describedby="emailHelp">
        </div>
    <input name="id" type="hidden" value="{{product2._id}}">
