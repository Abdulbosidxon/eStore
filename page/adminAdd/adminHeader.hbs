   <label for="exampleInputEmail3" class="form-label">comment</label>
    <input name="comment" type="text" class="form-control" id="exampleInputEmail3" aria-describedby="emailHelp" required>
    {{!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> --}}
  </div>
  {{! BUTTON URL}}

  {{!Image}}

  {{! TUGMA}}
  <button type="submit" class="btn btn-primary">SAVE</button>
</form>
    </div>
  </div>
</div>


{{#if header.length}}
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#id</th>
      <th scope="col">img</th>
      <th scope="col">title</th>
      <th scope="col">comment</th>
      <th scope="col">tahrirlash</th>

    </tr>
  </thead>
  <tbody>
    {{#each header}}
    <tr>
      <th scope="row">{{id}}</th>
       <td><img style="height: 100px;" src="../../images/header/{{headerImg}}" alt=""></td>
      <td>{{title}}</td>
      <td>{{comment}}</td>
      <td><a href="/admin/header/{{id}}"  class="btn btn-success">Edit</td>
      
    </tr>
    {{/each}}
  </tbody>
</table>

{{else}}
  {{!Image}}


{{/if}}
<script>
  function validateImageFile(input) {
    const file = input.files[0];
    console.log(file);
    const allowedTypes = /(\.|\/)(gif|jpe?g|png)$/i;

    if (!allowedTypes.test(file.type)) {
      alert("Only image files (gif, jpg, jpeg, png) are allowed");
      input.value = "";
    }
  }
</script>